<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
   <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.practicum.se.server.LoginServiceImp</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/practicumse/Login</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>searchFriend</servlet-name>
    <servlet-class>com.practicum.se.server.SearchFriend</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>searchFriend</servlet-name>
    <url-pattern>/practicumse/searchFriend</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UserDetailsServlet</servlet-name>
    <servlet-class>com.practicum.se.server.UserDetailsServiceImp</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>UserDetailsServlet</servlet-name>
    <url-pattern>/practicumse/UDetails</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
    <servlet-name>FriendDetailsServlet</servlet-name>
    <servlet-class>com.practicum.se.server.FriendDetailsServiceImp</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>FriendDetailsServlet</servlet-name>
    <url-pattern>/practicumse/FDetails</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>com.practicum.se.server.RegistrationServiceImp</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/practicumse/Registration</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>MailServlet</servlet-name>
    <servlet-class>com.practicum.se.server.SendMailServiceImp</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>MailServlet</servlet-name>
    <url-pattern>/practicumse/sendMail</url-pattern>
  </servlet-mapping>
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>PracticumSE.html</welcome-file>
  </welcome-file-list>


	<servlet>
    <servlet-name>signupServlet</servlet-name>
    <servlet-class>
com.practicum.se.server.SignupServiceImpl
    </servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>signupServlet</servlet-name>
    <url-pattern>/practicumse/signup</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>SimpleCaptcha</servlet-name>
    <servlet-class>
     com.practicum.se.server.servlet.ExtendedCaptchaServlet
    </servlet-class>
    <init-param>
        <param-name>width</param-name>
        <param-value>200</param-value>
    </init-param>
    <init-param>
        <param-name>height</param-name>
        <param-value>50</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>SimpleCaptcha</servlet-name>
    <url-pattern>/SimpleCaptcha.jpg</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
    <servlet-name>ForgotServlet</servlet-name>
    <servlet-class>com.practicum.se.server.ForgotServiceImp</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ForgotServlet</servlet-name>
    <url-pattern>/practicumse/Forgot</url-pattern>
  </servlet-mapping>
  
  
  
  <servlet>
    <servlet-name>ReturnServlet</servlet-name>
    <servlet-class>com.practicum.se.server.ReturnServiceImp</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ReturnServlet</servlet-name>
    <url-pattern>/practicumse/Return</url-pattern>
  </servlet-mapping>
  
  
  
   <servlet>
    <servlet-name>SentMailServlet</servlet-name>
    <servlet-class>com.practicum.se.server.MailServiceImp</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>SentMailServlet</servlet-name>
    <url-pattern>/practicumse/Mail</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ReSendCodeServlet</servlet-name>
    <servlet-class>com.practicum.se.server.ReSendCodeImp</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ReSendCodeServlet</servlet-name>
    <url-pattern>/practicumse/code</url-pattern>
  </servlet-mapping>
  
</web-app>
